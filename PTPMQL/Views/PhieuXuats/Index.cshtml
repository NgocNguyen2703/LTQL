@model IEnumerable<PTPMQL.Models.PhieuXuat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông Tin Phiếu Xuất</h2>

<p>
    @Html.ActionLink("Thêm Thông Tin", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongBan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongBan)
        </td>
        <td>
            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id=item.IDHoaDon }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.IDHoaDon }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDHoaDon })
        </td>
    </tr>
}

</table>
