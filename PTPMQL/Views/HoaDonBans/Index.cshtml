@model IEnumerable<PTPMQL.Models.HoaDonBan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông Tin Hóa Đơn</h2>

<p>
    @Html.ActionLink("Thêm Mới Thông Tin", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NgayLap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTenKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayLap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoTenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id=item.IDHoaDon }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.IDHoaDon }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDHoaDon })
        </td>
    </tr>
}

</table>
