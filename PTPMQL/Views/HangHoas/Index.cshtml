@model IEnumerable<PTPMQL.Models.HangHoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Hàng Hóa</h2>

<p>
    @Html.ActionLink("Thêm Mới Thông Tin Hàng Hóa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonVi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongCon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonVi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongCon)
        </td>
        <td>
            @Html.ActionLink("Chỉnh Sửa", "Edit", new { id=item.IDHang }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.IDHang }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDHang })
        </td>
    </tr>
}

</table>
